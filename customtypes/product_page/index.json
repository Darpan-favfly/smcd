{
  "format": "page",
  "id": "product_page",
  "label": "Product Page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Title",
          "allowTargetBlank": false,
          "single": "strong,heading1"
        }
      },
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "old_price": {
        "type": "Text",
        "config": {
          "label": "Old Price",
          "placeholder": ""
        }
      },
      "new_price": {
        "type": "Text",
        "config": {
          "label": "New Price",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Description",
          "allowTargetBlank": false,
          "multi": "paragraph,strong"
        }
      },
      "items": {
        "type": "Group",
        "config": {
          "label": "Items",
          "repeat": true,
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Image",
                "constraint": {
                  "width": 1080,
                  "height": 1028
                },
                "thumbnails": []
              }
            }
          }
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "customtypes": ["category_page"]
        }
      },
      "collection": {
        "type": "Link",
        "config": {
          "label": "Collection",
          "select": "document"
        }
      },
      "deal": {
        "type": "Link",
        "config": {
          "label": "Deal",
          "placeholder": "",
          "select": null
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "Meta Title [40-65 chars]"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "Page Description [70-155 chars]"
        },
        "type": "Text"
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 600
          },
          "thumbnails": [
            {
              "name": "large",
              "width": 1024,
              "height": 524
            },
            {
              "name": "medium",
              "width": 300,
              "height": 150
            },
            {
              "name": "thumbnail",
              "width": 150,
              "height": 150
            }
          ]
        }
      }
    }
  }
}
