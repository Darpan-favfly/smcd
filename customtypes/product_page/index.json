{
  "format": "page",
  "id": "product_page",
  "label": "Product Page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Title",
          "allowTargetBlank": false,
          "single": "strong,heading1"
        }
      },
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Description",
          "allowTargetBlank": false,
          "multi": "paragraph,strong"
        }
      },
      "image_items": {
        "type": "Group",
        "config": {
          "label": "Image Items",
          "repeat": true,
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Image",
                "constraint": {
                  "width": 1500,
                  "height": 1500
                },
                "thumbnails": []
              }
            },
            "video": {
              "type": "Link",
              "config": {
                "label": "Video",
                "placeholder": "",
                "select": "media"
              }
            },
            "shape": {
              "type": "Select",
              "config": {
                "label": "Shape",
                "placeholder": "",
                "options": [
                  "Round",
                  "Oval",
                  "Emerald",
                  "Pear",
                  "Cushion",
                  "Princess"
                ]
              }
            },
            "color": {
              "type": "Select",
              "config": {
                "label": "Color",
                "placeholder": "",
                "options": ["White Gold", "Rose Gold", "Yellow Gold"]
              }
            }
          }
        }
      },
      "price_items": {
        "type": "Group",
        "config": {
          "label": "Price Items",
          "repeat": true,
          "fields": {
            "price": {
              "type": "Number",
              "config": {
                "label": "Price",
                "placeholder": ""
              }
            },
            "carat": {
              "type": "Number",
              "config": {
                "label": "Carat",
                "placeholder": ""
              }
            }
          }
        }
      },
      "sizes": {
        "type": "Group",
        "config": {
          "label": "Sizes",
          "repeat": true,
          "fields": {
            "number": {
              "type": "Number",
              "config": {
                "label": "Number",
                "placeholder": ""
              }
            }
          }
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "customtypes": ["category_page"]
        }
      },
      "collection": {
        "type": "Link",
        "config": {
          "label": "Collection",
          "select": "document"
        }
      },
      "deal": {
        "type": "Link",
        "config": {
          "label": "Deal",
          "placeholder": "",
          "select": null
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "Meta Title [40-65 chars]"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "Page Description [70-155 chars]"
        },
        "type": "Text"
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 600
          },
          "thumbnails": [
            {
              "name": "large",
              "width": 1024,
              "height": 524
            },
            {
              "name": "medium",
              "width": 300,
              "height": 150
            },
            {
              "name": "thumbnail",
              "width": 150,
              "height": 150
            }
          ]
        }
      }
    }
  }
}
